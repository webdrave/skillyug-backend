# ============================================
# STREAMING CONFIGURATION
# ============================================

# For Development (No AWS needed)
USE_MOCK_STREAMING=true
NODE_ENV=development

# For Production (AWS IVS)
# USE_MOCK_STREAMING=false
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Optional: Recording configuration
# IVS_RECORDING_ARN=arn:aws:ivs:us-east-1:123456789012:recording-configuration/abcd1234

# Number of channels to create (default: 3)
INIT_CHANNELS_COUNT=3

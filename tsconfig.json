{
  "compilerOptions": {
    "target": "es2018",
    "module": "node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/test-*.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "test-api.ts",
    "test-pdf-extraction.ts",
    "test-recommendation-system.ts",
    "test-vector-store.ts"
  ]
}
